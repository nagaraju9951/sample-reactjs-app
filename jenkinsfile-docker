Jenkinsfile-docker
pipeline {
    agent {
        node {
            label 't053-runner'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git credentialsId: 'ca-git-access', branch: 'develop', url: "https://git.cloudavise.com/visops/t053/sample-reactjs-app.git"
            }
        }

        stage('prepare') {
            steps {
                sh 'ansible-vault decrypt --vault-id /opt/vault-id test-key.pem'
                sh "chmod 400 test-key.pem"
                sh "chmod +x deploy_script.sh"
                sh "./deploy_script.sh docker-prepare"
            }
        }
        stage('deploy') {
            steps {
                sh "./deploy_script.sh docker-deploy"
            }
        }
    }
}

